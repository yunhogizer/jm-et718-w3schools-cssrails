<style>
  #skillsForm {
    display:none;
  }
  #languagesForm {
    display:none;
  }
  .alignButton {
    float: right;
  }
  .alignTitle {
    float: left;
  }
  .alignRender {
    clear:both;
  }
  .formatButton {
    border: thin solid white;
    padding:5px;
    border-radius:50px;
  }
  .formatButton:hover {
    background-color: #a6bfbf;
  }
  
</style>

<script>
  function displaySkillsForm(){
    // toggle button to display form on and off to show form to add skills
    if(skillsForm.style.display == 'block'){
      // if form is displayed change its display to none
      skillsForm.style.display = 'none'
      // alter button to show minus sign
      $("#skillsButton").toggleClass("fa fa-minus fa-fw w3-margin-center w3-text-teal fa fa-plus fa-fw w3-margin-center w3-text-teal");
      
    }
    else{
      // if form is not displayed change its display to block
      skillsForm.style.display ='block'
      // alter button to show plus sign
      $("#skillsButton").toggleClass("fa fa-minus fa-fw w3-margin-center w3-text-teal fa fa-plus fa-fw w3-margin-center w3-text-teal");
    }
  }
  
  // LANGUAGES follows same syntax pattern as above ^^
  function displayLanguagesForm(){
    // toggle button to display form on and off to show form to add skills
    if(languagesForm.style.display == 'block'){
      // if form is displayed change its display to none
      languagesForm.style.display = 'none'
      // alter button to show minus sign
      $("#languagesButton").toggleClass("fa fa-minus fa-fw w3-margin-center w3-text-teal fa fa-plus fa-fw w3-margin-center w3-text-teal");
      
    }
    else{
      // if form is not displayed change its display to block
      languagesForm.style.display ='block'
      // alte button to show plus sign
      $("#languagesButton").toggleClass("fa fa-minus fa-fw w3-margin-center w3-text-teal fa fa-plus fa-fw w3-margin-center w3-text-teal");
    }
  }
  
  
</script>

